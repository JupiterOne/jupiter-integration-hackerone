{
  "name": "@jupiterone/jupiter-integration-hackerone",
  "version": "0.3.1",
  "description": "A JupiterOne managed integration for https://www.hackerone.com/",
  "main": "dist/index.js",
  "repository": "https://github.com/JupiterOne/jupiter-integration-hackerone",
  "license": "SEE LICENSE IN LICENSE",
  "files": [
    "LICENSE",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "ts-node --files --require dotenv/config tools/execute.ts | bunyan",
    "start:graph": "docker run -d --rm --name jupiterone-local-graph -p 8182:8182 tinkerpop/gremlin-server:3.3",
    "stop:graph": "docker stop jupiterone-local-graph",
    "prebuild": "yarn test",
    "build": "rm -rf dist/* && yarn build:types && yarn build:src && yarn build:docs",
    "build:src": "babel src --extensions '.ts' --out-dir dist",
    "build:docs": "ts-node tools/docs.ts",
    "build:types": "tsc --project tsconfig.dist.json --declaration --emitDeclarationOnly",
    "lint": "yarn lint:ts && yarn lint:md",
    "lint:md": "remark .",
    "lint:ts": "tslint --project .",
    "format": "yarn prettier --write '**/*.{ts,js,json,md}'",
    "test": "jest"
  },
  "dependencies": {
    "global": "^4.3.2",
    "hackerone-client": "^1.0.5"
  },
  "peerDependencies": {
    "@jupiterone/jupiter-managed-integration-sdk": "^23.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@jupiterone/jupiter-managed-integration-sdk": "^23.0.2",
    "@types/bunyan": "^1.8.6",
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.11",
    "@types/node": "^10.12.20",
    "bunyan": "^1.8.12",
    "dotenv": "^7.0.0",
    "fs-extra": "^7.0.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "jest-haste-map": "^24.5.0",
    "jest-resolve": "^24.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4",
    "remark-cli": "^6.0.1",
    "remark-lint": "^6.0.4",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-markdown-style-guide": "^2.1.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.md": [
        "remark .",
        "prettier --write",
        "git add"
      ],
      "*.ts": [
        "tslint --project .",
        "prettier --write",
        "git add"
      ],
      "*.{js,json}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": []
  }
}
